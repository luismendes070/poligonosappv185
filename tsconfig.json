{
  "compileOnSave": false,
  "include": [
    "rollup.config.ts",
    "babel.config.json",
    "docs/**/*ts",
    "src/**/*ts",
    "src/**/*geojson",
    "**/*.tsconfig.eslint.json",
    "tsconfig-path-bootstrap.ts"
  ],
  "compilerOptions": {
    "module": "ES2020",
    "paths": {
      "jquery": [
        "node_modules/jquery/dist/jquery"
      ],
      "*": [
        "*",
        "generated/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
