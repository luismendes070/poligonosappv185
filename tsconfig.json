{
  "compileOnSave": false,
  "include": [
    "babel.config.json",
    "docs/**/*ts",
    "src/**/*ts",
    "src/**/*geojson",
    "**/*.tsconfig.eslint.json",
    "tsconfig-path-bootstrap.ts",
    "rollup.config.ts",
    "style.css"
, "src/App.tsx", "Leaflet.tsx", "src/PoligonosAppReactDomServer.tsx", "src/PoligonosAppBrowser.tsx", "src/TokeComponent.tsx"  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "package":["./package.json"],
      "src/*":["src/*"],
      "jquery": [
        "node_modules/jquery/dist/jquery"
      ],
      "*": [
        "*",
        "generated/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "es2020",
      "dom"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["dom", "es2015.promise", "es5"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
